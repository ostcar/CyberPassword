{
  "manifest_version": 2,
  "name": "CyberPassword",
  "version": "0.1.0",
  "description": "__MSG_addonDescription__",
  "author": "Oskar Hahn",
  "homepage_url": "https://github.com/ostcar/CyberPassword",

  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "cyberpassword@oshahn.de"
    }
  },

  "icons": {
    "16": "icons/security-152690_16.png",
    "32": "icons/security-152690_32.png",
    "48": "icons/security-152690_48.png"
  },

  "background": {
      "scripts": [
        "background_scripts.js"
      ]
  },

  "options_ui": {
    "page": "ui/options.html"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/security-152690_16.png",
      "32": "icons/security-152690_32.png",
      "48": "icons/security-152690_48.png"
    },
    "default_popup": "ui/browser_action.html"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ]
}
