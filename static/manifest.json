{
  "manifest_version": 2,
  "name": "CyberPassword",
  "version": "0.0.2",
  "description": "__MSG_addonDescription__",
  "author": "Oskar Hahn",
  "homepage_url": "https://github.com/ostcar/CyberPassword",

  "default_locale": "en",

  "applications": {
    "gecko": {
      "id": "cyberpassword@oshahn.de"
    }
  },

  "icons": {
    "16": "icons/security-152690_16.png",
    "32": "icons/security-152690_32.png",
    "48": "icons/security-152690_48.png"
  },

  "background": {
      "scripts": [
        "background_scripts.js",
        "asmcrypto.js"
      ]
  },

  "options_ui": {
    "page": "ui/options.html"
  },

  "permissions": [
    "storage",
    "contextMenus",
    "activeTab"
  ]
}
